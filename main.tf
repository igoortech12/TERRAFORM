terraform {
  required_version = ">= 0.12"
}

provider "aws" {
  region = "us-east-1"
}

resource "aws_instance" "hello_world" {
  count = 1
  ami           = "ami-04505e74c0741db8d"
  instance_type = "t2.micro"
  user_data = <<-EOF
              #!/bin/bash
              sudo service apache2 start
              EOF
  tags = {
    Name = "Terraform_Hello_World${count.index}"
  }
  
}

